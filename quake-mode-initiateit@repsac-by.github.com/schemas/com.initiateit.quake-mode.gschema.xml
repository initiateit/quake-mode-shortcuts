<?xml version="1.0" encoding="utf-8"?>

<schemalist>

	<enum id="com.initiateit.quake-mode.halignment">
		<value nick="left" value="0" />
		<value nick="right" value="1" />
		<value nick="center" value="2" />
	</enum>

	<enum id="com.initiateit.quake-mode.valignment">
		<value nick="top" value="0" />
		<value nick="bottom" value="1" />
		<value nick="center" value="2" />
	</enum>

  	<schema id="com.initiateit.quake-mode.accelerators">
		<key name="quake-mode-accelerator-1" type="as"><default>[]</default></key>
		<key name="quake-mode-accelerator-2" type="as"><default>[]</default></key>
		<key name="quake-mode-accelerator-3" type="as"><default>[]</default></key>
		<key name="quake-mode-accelerator-4" type="as"><default>[]</default></key>
		<key name="quake-mode-accelerator-5" type="as"><default>[]</default></key>
		<!-- New resize accelerators -->
		<key name="resize-height-increase" type="as"><default>['&lt;Primary&gt;Up']</default></key>
		<key name="resize-height-decrease" type="as"><default>['&lt;Primary&gt;Down']</default></key>
		<key name="resize-width-decrease" type="as"><default>['&lt;Primary&gt;Left']</default></key>
		<key name="resize-width-increase" type="as"><default>['&lt;Primary&gt;Right']</default></key>
		<!-- Monitor switching accelerators -->
		<key name="switch-monitor-left" type="as"><default>['&lt;Primary&gt;&lt;Shift&gt;Left']</default></key>
		<key name="switch-monitor-right" type="as"><default>['&lt;Primary&gt;&lt;Shift&gt;Right']</default></key>
	</schema>

  	<schema id="com.initiateit.quake-mode.apps">
		<key name="app-1" type="s"><default>''</default></key>
		<key name="app-2" type="s"><default>''</default></key>
		<key name="app-3" type="s"><default>''</default></key>
		<key name="app-4" type="s"><default>''</default></key>
		<key name="app-5" type="s"><default>''</default></key>
		<!-- Per-app vertical alignment (animation direction) -->
		<key name="app-1-valign" enum="com.initiateit.quake-mode.valignment"><default>'top'</default></key>
		<key name="app-2-valign" enum="com.initiateit.quake-mode.valignment"><default>'top'</default></key>
		<key name="app-3-valign" enum="com.initiateit.quake-mode.valignment"><default>'top'</default></key>
		<key name="app-4-valign" enum="com.initiateit.quake-mode.valignment"><default>'top'</default></key>
		<key name="app-5-valign" enum="com.initiateit.quake-mode.valignment"><default>'top'</default></key>
		<!-- Per-app horizontal alignment -->
		<key name="app-1-halign" enum="com.initiateit.quake-mode.halignment"><default>'center'</default></key>
		<key name="app-2-halign" enum="com.initiateit.quake-mode.halignment"><default>'center'</default></key>
		<key name="app-3-halign" enum="com.initiateit.quake-mode.halignment"><default>'center'</default></key>
		<key name="app-4-halign" enum="com.initiateit.quake-mode.halignment"><default>'center'</default></key>
		<key name="app-5-halign" enum="com.initiateit.quake-mode.halignment"><default>'center'</default></key>
		<!-- Per-app width (0 means use global setting) -->
		<key name="app-1-width" type="i"><range min="0" max="100"/><default>0</default></key>
		<key name="app-2-width" type="i"><range min="0" max="100"/><default>0</default></key>
		<key name="app-3-width" type="i"><range min="0" max="100"/><default>0</default></key>
		<key name="app-4-width" type="i"><range min="0" max="100"/><default>0</default></key>
		<key name="app-5-width" type="i"><range min="0" max="100"/><default>0</default></key>
		<!-- Per-app height (0 means use global setting) -->
		<key name="app-1-height" type="i"><range min="0" max="100"/><default>0</default></key>
		<key name="app-2-height" type="i"><range min="0" max="100"/><default>0</default></key>
		<key name="app-3-height" type="i"><range min="0" max="100"/><default>0</default></key>
		<key name="app-4-height" type="i"><range min="0" max="100"/><default>0</default></key>
		<key name="app-5-height" type="i"><range min="0" max="100"/><default>0</default></key>
	</schema>

	<schema id="com.initiateit.quake-mode" path="/com/initiateit/quake-mode/">

		<key name="quake-mode-app" type="s">
			<default>''</default>
		</key>

		<key name="quake-mode-hotkey" type="as">
		<default><![CDATA[['']]]></default>
		</key>

		<key name="quake-mode-monitor" type="i">
			<range min="0" max="20"/>
			<default>0</default>
		</key>

		<key name="quake-mode-width" type="i">
			<range min="1" max="100"/>
			<default>80</default>
		</key>

		<key name="quake-mode-height" type="i">
			<range min="1" max="100"/>
			<default>46</default>
		</key>

		<key name="quake-mode-gap" type="i">
			<range min="0"/>
			<default>10</default>
		</key>

		<key name="quake-mode-animation-time" type="d">
			<range min="0.1" max="2"/>
			<default>0.25</default>
		</key>

		<key name="quake-mode-tray" type="b">
			<default>true</default>
		</key>

		<key name="quake-mode-focusout" type="b">
			<default>false</default>
		</key>

		<key name="quake-mode-hide-from-overview" type="b">
			<default>false</default>
		</key>

		<key name="quake-mode-always-on-top" type="b">
			<default>false</default>
		</key>

		<key name="quake-mode-halign" enum="com.initiateit.quake-mode.halignment">
			<default>'center'</default>
		</key>

		<key name="quake-mode-valign" enum="com.initiateit.quake-mode.valignment">
			<default>'top'</default>
		</key>

		<!-- Resize step increment (percentage) -->
		<key name="resize-step" type="i">
			<range min="1" max="20"/>
			<default>5</default>
		</key>

		<child name="accelerators" schema="com.initiateit.quake-mode.accelerators"/>
		<child name="apps" schema="com.initiateit.quake-mode.apps"/>
  </schema>

</schemalist>